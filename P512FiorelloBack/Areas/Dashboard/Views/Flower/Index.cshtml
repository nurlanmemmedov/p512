@model List<FlowerListViewModel>
@{
    ViewData["Title"] = "Index";
}
<!-- Button trigger modal -->
<!-- Modal -->


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Flower List</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var flower in Model)
                                    {
                                        <tr class="table-success">
                                            <td>
                                                @flower.Name
                                            </td>
                                       
                                            <td>
                                                <img src="~/assets/images/@flower.MainImage" style="width: 200px; height:200px" />
                                            </td>
                                            <td>
                                                @flower.Price
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="Flower" asp-action="Detail" asp-route-id="@flower.Id">Detail</a>
                                                <a class="btn btn-warning" asp-controller="Flower" asp-action="Update" asp-route-id="@flower.Id">Update</a>
                                                <a class="btn btn-danger" asp-controller="Flower" asp-action="Update" asp-route-id="@flower.Id">Update</a>

                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>