@model List<UserVm>
@{
    ViewData["Title"] = "Index";
}
<!-- Button trigger modal -->
<!-- Modal -->


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">User List</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Fullname
                                        </th>
                                        <th>
                                            Username
                                        </th>
                                        <th>
                                            Roles
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr class="table-success">
                                            <td>
                                                @user.Fullname
                                            </td>
                                            <td>
                                                @user.Username
                                            </td>
                                            <td>
                                                @user.Roles
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="Category" asp-action="Detail" asp-route-id="">Manage Roles</a>
                                                <a class="btn btn-warning" asp-controller="Category" asp-action="Update" asp-route-id="">Change Password</a>
                                                <a class="btn btn-danger" id="DeleteCat" data-id="">Block</a>

                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(document).on("click", "#DeleteCat", function () {
                let id = $(this).data("id");
                console.log(id);
                $.ajax({
                    type: "GET",
                    url: "/Dashboard/category/delete/" + id,
                    success: function (response) {
                        $("body").append(response);
                        $("#exampleModal").modal('show');
                    }
                })
            })
        });
    </script>
}