@model List<string>
@{
    ViewData["Title"] = "Index";
}
<!-- Button trigger modal -->
<!-- Modal -->


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">@ViewBag.Name roles</h4>

                        <a class="btn btn-primary" asp-action="AddRole" asp-route-id="@ViewBag.UserId">Add role</a>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var roleName in Model)
                                    {
                                        <tr class="table-success">
                                            <td>
                                                @roleName
                                            </td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="User" asp-action="RemoveRole" asp-route-id="@ViewBag.UserId" asp-route-roleName="@roleName">Remove role</a>
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $(document).on("click", "#DeleteCat", function () {
                let id = $(this).data("id");
                console.log(id);
                $.ajax({
                    type: "GET",
                    url: "/Dashboard/category/delete/" + id,
                    success: function (response) {
                        $("body").append(response);
                        $("#exampleModal").modal('show');
                    }
                })
            })
        });
    </script>
}